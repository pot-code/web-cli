{% func GoBackendDockerfile() -%}
FROM golang:1.16 as builder

WORKDIR /go/src

COPY go.mod .
COPY go.sum .

RUN go mod download

COPY . .
# build prod app
RUN GOARCH=amd64 GOOS=linux CGO_ENABLED=0 go build -ldflags="-s -w" -o app ./cmd

FROM alpine:3.8

WORKDIR /usr/bin/go

COPY --from=builder ["/go/src/app", "./"]

RUN chmod 0755 app

EXPOSE 8081 

CMD [ "./app" ]
{% endfunc %}