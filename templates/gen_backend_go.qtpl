{% func GoBackendWebServer(projectName, author string) -%}
package web

import (
	"github.com/google/wire"
	"github.com/labstack/echo/v4"
	"github.com/{%s author %}/{%s projectName %}/infra"
	"go.uber.org/zap"
)

type HandlerCollection struct {
}

type HttpServer struct {
	Config    *infra.AppConfig
	Logger    *zap.Logger
	Server    *echo.Echo
	Handlers  *HandlerCollection
}

func NewHttpServer(
	cfg *infra.AppConfig,
	logger *zap.Logger,
	server *echo.Echo,
	handlers *HandlerCollection,
) *HttpServer {
	return &HttpServer{Config: cfg, Logger: logger, Server: server, Handlers: handlers}
}

var HttpSet = wire.NewSet(
	wire.Struct(new(HandlerCollection), "*"),
)
{% endfunc %}

{% func GoBackendWebWire(projectName, author string) -%}
//+build wireinject

package web

import (
	"github.com/google/wire"
	"github.com/{%s author %}/{%s projectName %}/infra"
	"github.com/pot-code/gobit/pkg/util"
)

func InitHttpServer(lm *util.LifecycleManager) *HttpServer {
	wire.Build(
		NewHttpServer, HttpSet, infra.WebSet,
	)
	return &HttpServer{}
}
