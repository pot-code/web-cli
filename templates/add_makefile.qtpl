{% func GoMakefile() -%}
GO:=go
GO_WIN:=GOOS=windows GOARCH=amd64 go
LDFLAGS:=-s -w
BIN_NAME:=app
BIN_NAME_WIN:=app.exe
OUT_PATH:=./.out

build: test
	@$(GO) build -ldflags '$(LDFLAGS)' -o $(OUT_PATH)/$(BIN_NAME) .

build-win64: test
	@$(GO_WIN) build -ldflags '$(LDFLAGS)' -o $(OUT_PATH)/$(BIN_NAME_WIN) .

clean: 
	@rm -rf .out

test:
	@$(GO) test -v ./

dev: generate
	@air -c air.toml
{% endfunc -%}